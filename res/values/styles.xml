<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.MyTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/customActionBarTabStyle</item>
        <item name="android:actionBarStyle">@style/customActionBarTabStyle</item>
    </style>

    <style name="Theme.MyNoActionBarTheme" parent="Theme.Sherlock.Light.NoActionBar">
        <item name="actionBarStyle">@style/customActionBarTabStyle</item>
        <item name="android:actionBarStyle">@style/customActionBarTabStyle</item>
    </style>

    <style name="Theme.MyNoActionBarTheme.Splash">
        <item name="android:windowAnimationStyle">@style/SplashAnimation</item>
    </style>

    <style name="Theme.MyNoActionBarTheme.Intro">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/IntroAnimation</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Translucent.NoTitleBar.Dim" parent="@android:Theme.Translucent.NoTitleBar">
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="Theme.DoNotDim" parent="android:Theme">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="Theme.PopupDialog" parent="android:Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/SlideDownDialogAnimation</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="customActionBarTabStyle" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">#F0F0F0</item>
        <item name="background">#F0F0F0</item>
    </style>

    <!-- Window Transition Animations -->

    <style name="SplashAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="SlideDownDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_down_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_up</item>
    </style>

    <style name="IntroAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in_intro</item>
        <item name="android:windowExitAnimation">@anim/fade_out_intro</item>
    </style>

</resources>