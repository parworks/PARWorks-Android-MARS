<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.MyTheme" parent="Theme.Sherlock.Light">
        <item name="actionBarStyle">@style/customActionBarTabStyle</item>
        <item name="android:actionBarStyle">@style/customActionBarTabStyle</item>
    </style>

    <style name="Theme.MyNoActionBarTheme" parent="Theme.Sherlock.Light.NoActionBar">
        <item name="actionBarStyle">@style/customActionBarTabStyle</item>
        <item name="android:actionBarStyle">@style/customActionBarTabStyle</item>
    </style>

    <style name="customActionBarTabStyle" parent="Widget.Sherlock.ActionBar">
        <item name="android:background">#F0F0F0</item>
        <item name="background">#F0F0F0</item>
    </style>

</resources>